# @jetdevs/core SDK - Environment Variables
# Copy this file to .env.local and configure your values

# =============================================================================
# REQUIRED - Database Connection
# =============================================================================

# Primary database connection (subject to RLS policies)
DATABASE_URL=postgres://app_user:password@localhost:5432/myapp

# =============================================================================
# RECOMMENDED - Privileged Database Access
# =============================================================================

# Connection for internal operations that bypass RLS
# Use a different user with elevated permissions
INTERNAL_API_DATABASE_URL=postgres://internal_user:password@localhost:5432/myapp

# =============================================================================
# OPTIONAL - Admin Operations
# =============================================================================

# Connection for database administration (migrations, RLS deployment)
ADMIN_DATABASE_URL=postgres://admin:password@localhost:5432/myapp

# Migration-specific connection (uses admin privileges)
DATABASE_MIGRATE_URL=postgres://admin:password@localhost:5432/myapp

# =============================================================================
# AUTHENTICATION (NextAuth.js)
# =============================================================================

# Required for NextAuth
NEXTAUTH_SECRET=your-super-secret-key-change-in-production
NEXTAUTH_URL=http://localhost:3000

# Optional: Enable public registration
NEXT_PUBLIC_ENABLE_PUBLIC_REGISTRATION=true

# =============================================================================
# APPLICATION
# =============================================================================

# Base URL for the application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# CDN URL for static assets (optional)
# NEXT_PUBLIC_CDN_BASE_URL=https://cdn.example.com

# =============================================================================
# OBSERVABILITY (Optional)
# =============================================================================

# Enable metrics collection (Datadog, CloudWatch, etc.)
# METRICS_ENABLED=true

# Enable analytics/event tracking (Segment, Mixpanel, etc.)
# ANALYTICS_ENABLED=true

# Enable error monitoring (Sentry, etc.)
# ERROR_MONITORING_ENABLED=true
